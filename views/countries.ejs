
<% include head %>
<!-- include app.js or other files needed that you write here -->

  <h1><%= title %></h1>
  <p>Welcome to <%= title %></p>

<section ng-app="africaApp">


  <h2>Search by Country<h2>
    <form ng-submit="search(country)" class="search" action="index.html" method="post">
      <input type="button" name="country" ng-model="country" placeholder="country name">
    </form>

<hr />

  <table ng-controller="countriesController">
    <tr>
      <th>Country Name</th>
        <th>Subscriptions (per 100)</th>
          <th>Year</th>
    </tr>
    <tr ng-repeat="country in countries">
      <td> {{ country.Country }} </td>
        <td> {{ country.Value }} </td>
          <td> {{ country.Year }} </td>
    </tr>
  </table>

</section>

<% include foot %>
<script type="text/javascript"src="/javascripts/angular-app.js"></script>
